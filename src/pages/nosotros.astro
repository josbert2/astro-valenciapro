<style>
    .about-premium {
        padding: 100px 0;
        position: relative;
        background: #fff;
        overflow: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: center;
    }

    /* IMAGEN */
    .about-image-wrapper {
        position: relative;
        padding: 20px;
    }

    .about-image-inner {
        border-radius: 30px;
        overflow: hidden;
        position: relative;
        z-index: 2;
        box-shadow: 0 20px 50px rgba(0,0,0,0.15);
    }

    .about-image-inner img {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.6s ease;
    }

    .about-image-wrapper:hover .about-image-inner img {
        transform: scale(1.05);
    }

    .about-image-frame {
        position: absolute;
        top: 0;
        left: 0;
        width: 90%;
        height: 90%;
        border: 2px solid #bfb37b;
        border-radius: 30px;
        z-index: 0;
        transform: translate(-10px, -10px);
        opacity: 0.6;
    }

    .about-floating-badge {
        position: absolute;
        bottom: 50px;
        right: -20px;
        background: #fff;
        padding: 15px 25px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        z-index: 3;
        animation: floatBadge 4s ease-in-out infinite;
    }

    @keyframes floatBadge {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .badge-icon {
        color: #bfb37b;
    }

    .badge-text {
        line-height: 1.2;
        color: #1a1a1a;
        font-size: 0.9rem;
    }

    .badge-text strong {
        display: block;
        font-size: 1.1rem;
    }

    /* CONTENIDO */
    .about-subtitle {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #1A1A1A;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .line-before {
        width: 40px;
        height: 1px;
        background: #1A1A1A;
        display: block;
    }

    .about-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        line-height: 1.2;
        color: #bfb37b;
        margin-bottom: 30px;
        letter-spacing: 1px;
        font-weight: 300;
    }

    .about-bio p {
        font-size: 1.05rem;
        color: #555;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    .about-bio p:last-child {
        margin-bottom: 0;
    }

    .about-divider {
        height: 1px;
        background: #eee;
        margin: 30px 0;
    }

    /* GRID CONTACTO */
    .about-contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 40px;
    }

    .contact-card {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .contact-card .icon-box {
        width: 45px;
        height: 45px;
        background: #fdfbf7;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #bfb37b;
        transition: all 0.3s ease;
    }

    .contact-card:hover .icon-box {
        background: #bfb37b;
        color: #fff;
    }

    .info-box .label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #999;
        letter-spacing: 0.5px;
        margin-bottom: 2px;
    }

    .info-box .value {
        font-weight: 600;
        color: #1a1a1a;
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .info-box .value:hover {
        color: #bfb37b;
    }

    /* BOTÓN */
    .about-btn {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        background: #1a1a1a;
        color: #fff;
        padding: 14px 32px;
        border-radius: 60px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .about-btn:hover {
        background: #bfb37b;
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(191,179,123,0.3);
    }

    .about-btn svg {
        transition: transform 0.3s;
    }

    .about-btn:hover svg {
        transform: translateX(5px);
    }

    /* DECORACIÓN */
    .floating-decoration {
        position: absolute;
        bottom: 0;
        right: 0;
        z-index: 0;
        opacity: 0.35;
        pointer-events: none;
        animation: floatShape 8s ease-in-out infinite;
    }

    .floating-decoration img {
        max-width: 248px;
        height: auto;
    }

    @keyframes floatShape {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        50% { transform: translate(-20px, -15px) rotate(5deg); }
    }

    @media (max-width: 991px) {
        .about-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        .about-image-wrapper {
            max-width: 500px;
            margin: 0 auto;
        }
        .about-contact-grid {
            grid-template-columns: 1fr;
        }
        .about-title {
            font-size: 2rem;
        }
    }
</style>
