---
import Layout from '../layouts/main.astro';
---

<Layout
  title="Alianzas | Valencia Pro"
  description="Conoce nuestras alianzas comerciales y beneficios exclusivos para nuestros clientes."
>
  <section class="valencia-alianzas-section">
    <div class="container">

      <!-- Header Premium -->
      <div class="alianzas-header">
        <h4 class="alianzas-kicker">
          <span class="line-before"></span>
          Beneficios Exclusivos
        </h4>

        <h2 class="alianzas-title">
          <span class="fw-light">Nuestras</span>
          <span class="fw-bold highlight-font">Alianzas</span>
        </h2>

        <p class="alianzas-subtitle">
          Accede a descuentos y beneficios especiales por ser parte de nuestra comunidad.
        </p>
      </div>

      <!-- Client-side root -->
      <div id="alianzas-root" class="alianzas-root">
        <div class="no-alianzas">
          <p>Cargando alianzas…</p>
        </div>
      </div>

    </div>
  </section>

  <!-- Client-side loader -->
  <script is:inline>
    const apiUrl = "https://cms.valenciapro.cl";
    const root = document.getElementById("alianzas-root");

    function esc(str) {
      return String(str ?? "")
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&#039;");
    }

    function renderNoAlianzas(msg = "Próximamente agregaremos nuestras alianzas y beneficios exclusivos.") {
      root.innerHTML = `
        <div class="no-alianzas">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M16.48 10.41c-.39.39-1.04.39-1.43 0l-4.47-4.46-7.05 7.04-.66-.63 3.9-3.91-3.25-3.24c-.39-.39-.39-1.04 0-1.43l3.9-3.91 6.97 6.97 4.5-4.5c1.17-1.17 3.06-1.17 4.24 0 1.17 1.17 1.17 3.06 0 4.24l-4.5 4.5c-.39.39-1.04.39-1.43 0l-.79-.8-4.93 4.94c-.39.39-1.04.39-1.43 0l-1.41-1.41c-.39-.39-.39-1.04 0-1.43l7.05-7.04z"/>
          </svg>
          <p>${esc(msg)}</p>
        </div>
      `;
    }

    function renderAlianzas(alianzas) {
      if (!Array.isArray(alianzas) || alianzas.length === 0) {
        return renderNoAlianzas();
      }

      const html = alianzas.map((alianza) => {
        const hasImage = !!alianza.imagen;
        const hasContact = !!(alianza.telefono || alianza.whatsapp || alianza.instagram);

        const telClean = (alianza.telefono || "").replace(/\s+/g, "");
        const waClean = (alianza.whatsapp || "").replace(/\D/g, "");
        const igClean = (alianza.instagram || "").replace("@", "");

        const logoHtml = alianza.logo
          ? `<img src="${esc(alianza.logo)}" alt="${esc(alianza.nombre || "Alianza")}" />`
          : `<svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M16.48 10.41c-.39.39-1.04.39-1.43 0l-4.47-4.46-7.05 7.04-.66-.63 3.9-3.91-3.25-3.24c-.39-.39-.39-1.04 0-1.43l3.9-3.91 6.97 6.97 4.5-4.5c1.17-1.17 3.06-1.17 4.24 0 1.17 1.17 1.17 3.06 0 4.24l-4.5 4.5c-.39.39-1.04.39-1.43 0l-.79-.8-4.93 4.94c-.39.39-1.04.39-1.43 0l-1.41-1.41c-.39-.39-.39-1.04 0-1.43l7.05-7.04z"/></svg>`;

        const descHtml = alianza.descripcion
          ? `<p class="alianza-description">${esc(alianza.descripcion)}</p>`
          : "";

        const benefitHtml = alianza.beneficio
          ? `
            <div class="alianza-benefit">
              <span class="benefit-badge">Beneficio exclusivo</span>
              <h4 class="benefit-title">${esc(alianza.beneficio)}</h4>
              ${alianza.beneficio_texto ? `<p class="benefit-text">${esc(alianza.beneficio_texto)}</p>` : ""}
            </div>
          `
          : "";

        const contactHtml = hasContact
          ? `
            <div class="alianza-contact">
              ${
                alianza.telefono
                  ? `
                    <a href="tel:${esc(telClean)}" class="contact-item" title="Llamar">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                      </svg>
                      <span>${esc(alianza.telefono)}</span>
                    </a>
                  `
                  : ""
              }

              ${
                alianza.whatsapp
                  ? `
                    <a href="https://wa.me/${esc(waClean)}" target="_blank" rel="noopener" class="contact-item whatsapp" title="WhatsApp">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884"/>
                      </svg>
                      <span>WhatsApp</span>
                    </a>
                  `
                  : ""
              }

              ${
                alianza.instagram
                  ? `
                    <a href="https://instagram.com/${esc(igClean)}" target="_blank" rel="noopener" class="contact-item instagram" title="Instagram">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069z"/>
                      </svg>
                      <span>@${esc(igClean)}</span>
                    </a>
                  `
                  : ""
              }
            </div>
          `
          : "";

        const ctaHtml = alianza.link
          ? `
            <div class="alianza-cta">
              <a href="${esc(alianza.link)}" target="_blank" rel="noopener">
                Ver más información
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"/>
                  <polyline points="12 5 19 12 12 19"/>
                </svg>
              </a>
            </div>
          `
          : "";

        const featuredHtml = hasImage
          ? `
            <div class="alianza-featured-image">
              <img src="${esc(alianza.imagen)}" alt="${esc(alianza.beneficio || alianza.nombre || "Imagen")}" />
            </div>
          `
          : "";

        return `
          <div class="alianza-card ${hasImage ? "has-featured-image" : ""}">
            <div class="alianza-card-inner">

              <div class="alianza-content">
                <div class="alianza-card-header">
                  <div class="alianza-logo ${!alianza.logo ? "no-image" : ""}">
                    ${logoHtml}
                  </div>
                  <h3 class="alianza-name">${esc(alianza.nombre || "")}</h3>
                </div>

                ${descHtml}
                ${benefitHtml}
                ${contactHtml}
                ${ctaHtml}
              </div>

              ${featuredHtml}

            </div>
          </div>
        `;
      }).join("");

      root.innerHTML = `<div class="alianzas-grid">${html}</div>`;
    }

    async function loadAlianzas() {
      try {
        const fetchUrl = `${apiUrl}/wp-json/valencia/v1/alianzas`;
        const res = await fetch(fetchUrl, { credentials: "omit" });

        if (!res.ok) throw new Error(`HTTP ${res.status} ${res.statusText}`);

        const data = await res.json();
        renderAlianzas(data);
      } catch (e) {
        console.error("Error fetching alianzas:", e);
        renderNoAlianzas("No pudimos cargar las alianzas en este momento.");
      }
    }

    loadAlianzas();
  </script>

<style is:global>
  @import "../styles/alianzas.css";
</style>
</Layout>
