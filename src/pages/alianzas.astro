---
import Layout from '../layouts/main.astro';

const apiUrl = import.meta.env.PUBLIC_WP_API_URL || 'http://localhost:10016';

// Fetch alliances from WordPress REST API
let alianzas: any[] = [];
try {
    const response = await fetch(`https://cms.valenciapro.cl/wp-json/valencia/v1/alianzas`);
    if (response.ok) {
        alianzas = await response.json();
    }
} catch (e) {
    console.error('Error fetching alianzas:', e);
}
---

<Layout title="Alianzas | Valencia Pro" description="Conoce nuestras alianzas comerciales y beneficios exclusivos para nuestros clientes.">
    <section class="valencia-alianzas-section">
        <div class="container">
            
            <!-- Header Premium -->
            <div class="alianzas-header">
                <h4 class="alianzas-kicker">
                    <span class="line-before"></span>
                    Beneficios Exclusivos
                </h4>
                
                <h2 class="alianzas-title">
                    <span class="fw-light">Nuestras</span>
                    <span class="fw-bold highlight-font">Alianzas</span>
                </h2>
                
                <p class="alianzas-subtitle">
                    Accede a descuentos y beneficios especiales por ser parte de nuestra comunidad.
                </p>
            </div>

            {alianzas.length > 0 ? (
                <div class="alianzas-grid">
                    {alianzas.map((alianza: any) => {
                        const hasImage = !!alianza.imagen;
                        const hasContact = alianza.telefono || alianza.whatsapp || alianza.instagram;
                        return (
                            <div class={`alianza-card ${hasImage ? 'has-featured-image' : ''}`}>
                                <div class="alianza-card-inner">
                                    
                                    <div class="alianza-content">
                                        <!-- Header: Logo + Nombre -->
                                        <div class="alianza-card-header">
                                            <div class={`alianza-logo ${!alianza.logo ? 'no-image' : ''}`}>
                                                {alianza.logo ? (
                                                    <img src={alianza.logo} alt={alianza.nombre} />
                                                ) : (
                                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M16.48 10.41c-.39.39-1.04.39-1.43 0l-4.47-4.46-7.05 7.04-.66-.63 3.9-3.91-3.25-3.24c-.39-.39-.39-1.04 0-1.43l3.9-3.91 6.97 6.97 4.5-4.5c1.17-1.17 3.06-1.17 4.24 0 1.17 1.17 1.17 3.06 0 4.24l-4.5 4.5c-.39.39-1.04.39-1.43 0l-.79-.8-4.93 4.94c-.39.39-1.04.39-1.43 0l-1.41-1.41c-.39-.39-.39-1.04 0-1.43l7.05-7.04z"/></svg>
                                                )}
                                            </div>
                                            <h3 class="alianza-name">{alianza.nombre}</h3>
                                        </div>

                                        {alianza.descripcion && (
                                            <p class="alianza-description">{alianza.descripcion}</p>
                                        )}

                                        {alianza.beneficio && (
                                            <div class="alianza-benefit">
                                                <span class="benefit-badge">Beneficio exclusivo</span>
                                                <h4 class="benefit-title">{alianza.beneficio}</h4>
                                                {alianza.beneficio_texto && (
                                                    <p class="benefit-text">{alianza.beneficio_texto}</p>
                                                )}
                                            </div>
                                        )}

                                        {hasContact && (
                                            <div class="alianza-contact">
                                                {alianza.telefono && (
                                                    <a href={`tel:${alianza.telefono.replace(/\s+/g, '')}`} class="contact-item" title="Llamar">
                                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                                                        <span>{alianza.telefono}</span>
                                                    </a>
                                                )}
                                                {alianza.whatsapp && (
                                                    <a href={`https://wa.me/${alianza.whatsapp.replace(/\D/g, '')}`} target="_blank" rel="noopener" class="contact-item whatsapp" title="WhatsApp">
