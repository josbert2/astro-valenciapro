---
interface Props {
    phone?: string;
    email?: string;
    instagram?: string;
    address?: string;
}

const {
    phone = "(+56) 9 9337 32 37",
    email = "paula.fuentes@valenciapro.cl",
    instagram = "https://www.instagram.com/valencia.propiedades/",
    address = "Suarez Mujica # 420 Ñuñoa"
} = Astro.props;
---

<footer class="font-sans">
   

    <!-- Main White Section with Columns -->
    <div class="bg-white py-12 md:py-16 border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 text-center md:text-left">
                
                <!-- Col 1: Logo & Info -->
                <div class="flex flex-col items-center md:items-start gap-4">
                    <img src="/header-removebg-preview (4).png" alt="Valencia Propiedades" class="w-40 h-auto object-contain mb-2" />
                    <p class="text-sm text-gray-500 leading-relaxed max-w-xs">
                        Comprometidos con la excelencia en el servicio inmobiliario. Te acompañamos en cada paso.
                    </p>
                    <div class="flex gap-4 text-gray-400 mt-2">
                         <a href={instagram} target="_blank" rel="noopener noreferrer" class="hover:text-[#BFA15F] transition-colors"><span class="sr-only">Instagram</span><svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg></a>
                    </div>
                </div>

                <!-- Col 2: Navigation -->
                <div class="flex flex-col gap-4">
                    <h3 class="text-[#BFA15F] font-bold uppercase tracking-wider text-sm">Navegación</h3>
                    <ul class="flex flex-col gap-2 text-sm text-gray-500">
                        <li><a href="/" class="hover:text-[#BFA15F] transition-colors">Inicio</a></li>
                        <li><a href="/quienes-somos" class="hover:text-[#BFA15F] transition-colors">Quiénes somos</a></li>
                        <li><a href="/blog" class="hover:text-[#BFA15F] transition-colors">Blog</a></li>
                        <li><a href="/contacto" class="hover:text-[#BFA15F] transition-colors">Contacto</a></li>
                        <li><a href="/servicios" class="hover:text-[#BFA15F] transition-colors">Servicios</a></li>
                    </ul>
                </div>

                <!-- Col 3: Properties -->
                <div class="flex flex-col gap-4">
                    <h3 class="text-[#BFA15F] font-bold uppercase tracking-wider text-sm">Propiedades</h3>
                    <ul class="flex flex-col gap-2 text-sm text-gray-500">
                         <li><a href="/propiedades?type=departamento" class="hover:text-[#BFA15F] transition-colors">Departamentos</a></li>
                        <li><a href="/propiedades?type=casa" class="hover:text-[#BFA15F] transition-colors">Casas</a></li>
                        <li><a href="/propiedades?operation=arriendo" class="hover:text-[#BFA15F] transition-colors">En Arriendo</a></li>
                        <li><a href="/propiedades?operation=venta" class="hover:text-[#BFA15F] transition-colors">En Venta</a></li>
                    </ul>
                </div>

                <!-- Col 4: Contact/Newsletter -->
                <div class="flex flex-col gap-4">
                    <h3 class="text-[#BFA15F] font-bold uppercase tracking-wider text-sm">Contacto</h3>
                    <ul class="flex flex-col gap-3 text-sm text-gray-500">
                        <li class="flex items-start gap-2 justify-center md:justify-start">
                            <svg class="w-5 h-5 text-[#BFA15F]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                            <span>{address}</span>
                        </li>
                        <li class="flex items-center gap-2 justify-center md:justify-start">
                            <svg class="w-5 h-5 text-[#BFA15F]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                            <a href={`tel:${phone}`} class="hover:text-[#BFA15F] transition-colors">{phone}</a>
                        </li>
                        <li class="flex items-center gap-2 justify-center md:justify-start">
                             <svg class="w-5 h-5 text-[#BFA15F]" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                            <a href={`mailto:${email}`} class="hover:text-[#BFA15F] transition-colors break-all">{email}</a>
                        </li>
                    </ul>
                </div>
                
            </div>
        </div>
    </div>

    <!-- Bottom Gold Bar -->
    <div class="bg-[#BFA15F] text-white py-4 px-4 md:px-8 border-t border-white/20">
        <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-2 text-xs md:text-sm font-medium">
            <div>
                © 2026 Valencia Propiedades. Todos los derechos reservados.
            </div>
            <div class="flex items-center gap-1">
                Desarrollado por <a href="https://opensys.cl" target="_blank" rel="noopener noreferrer" class="hover:underline font-bold">OpenSys</a>
            </div>
        </div>
    </div>
</footer>
