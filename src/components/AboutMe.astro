---
interface Props {
    subtitle?: string;
    name?: string;
    bio1?: string;
    bio2?: string;
    bio3?: string;
    email?: string;
    phone?: string;
    whatsapp?: string;
    instagram?: string;
    image?: string;
}

const {
    subtitle = "Corredora de Propiedades",
    name = "Paula Fuentes Valencia",
    bio1 = "Me encanta moverme al ritmo de lo que está pasando hoy en el mundo inmobiliario. Sé que este mercado cambia rápido, por eso dedico tiempo a estudiar, capacitarme y buscar soluciones actuales y eficientes para cada cliente.",
    bio2 = "Acompaño a mis clientes en todas las etapas del proceso, desde la primera visita hasta la entrega de llaves, con paciencia, respeto y transparencia. Mi objetivo es que se sientan seguros, informados y felices con la decisión que toman.",
    bio3 = "Disfruto profundamente conocer historias, familias y proyectos de vida. Esa conexión humana es lo que hace que mi trabajo tenga sentido: ser parte del camino que los lleva a encontrar su lugar ideal.",
    email = "paula.fuentes@valenciapro.cl",
    phone = "+56 9 9337 32 37",
    whatsapp = "56993373237",
    instagram = "valencia.propiedades",
    image = "https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=800&h=900&fit=crop"
} = Astro.props;
---

<section class="py-24 bg-white relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
            
            <div class="relative">
                <div class="relative p-5 group">
                    <div class="absolute top-0 left-0 w-[90%] h-[90%] border-2 border-primary/60 rounded-[30px] -translate-x-3 -translate-y-3 z-0"></div>
                    <div class="relative z-10 rounded-[30px] overflow-hidden shadow-2xl">
                        <img 
                            src={image} 
                            alt={name}
                            class="w-full h-auto transition-transform duration-500 group-hover:scale-105"
                        />
                    </div>
                    <div class="absolute bottom-12 -right-5 bg-white py-4 px-6 rounded-2xl shadow-xl z-20 flex items-center gap-4 animate-float">
                        <span class="text-2xl text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
                            </svg>
                        </span>
                        <div class="leading-tight">
                            <strong class="block text-gray-900">Gestión</strong>
                            <span class="text-sm text-gray-600">Inmobiliaria</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative">
                <h4 class="text-xs uppercase tracking-widest text-gray-900 mb-6 flex items-center gap-3">
                    <span class="w-10 h-px bg-gray-900"></span>
                    {subtitle}
                </h4>
                
                <h2 class="text-primary text-xl lg:text-2xl font-light uppercase tracking-widest mb-8">
                    {name}
                </h2>

                <div class="space-y-5 text-gray-600 leading-relaxed mb-8">
                    <p>{bio1}</p>
                    <p>{bio2}</p>
                    <p>{bio3}</p>
                </div>

                <div class="h-px bg-gray-200 my-8"></div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                    <a href={`mailto:${email}`} class="group flex items-center gap-4">
                        <div class="w-11 h-11 rounded-full bg-stone-100 flex items-center justify-center text-primary transition-all group-hover:bg-primary group-hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect width="20" height="16" x="2" y="4" rx="2"/>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                            </svg>
                        </div>
                        <div>
                            <span class="block text-xs uppercase text-gray-400 tracking-wide">Email</span>
                            <span class="text-sm font-semibold text-gray-900 group-hover:text-primary transition-colors">{email}</span>
                        </div>
                    </a>

                    <a href={`tel:${phone.replace(/\s/g, '')}`} class="group flex items-center gap-4">
                        <div class="w-11 h-11 rounded-full bg-stone-100 flex items-center justify-center text-primary transition-all group-hover:bg-primary group-hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                            </svg>
                        </div>
                        <div>
                            <span class="block text-xs uppercase text-gray-400 tracking-wide">Teléfono</span>
                            <span class="text-sm font-semibold text-gray-900 group-hover:text-primary transition-colors">{phone}</span>
                        </div>
                    </a>

                    <a href={`https://wa.me/${whatsapp}`} target="_blank" class="group flex items-center gap-4">
                        <div class="w-11 h-11 rounded-full bg-stone-100 flex items-center justify-center text-primary transition-all group-hover:bg-primary group-hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                            </svg>
                        </div>
                        <div>
                            <span class="block text-xs uppercase text-gray-400 tracking-wide">WhatsApp</span>
                            <span class="text-sm font-semibold text-gray-900 group-hover:text-primary transition-colors">+{whatsapp.slice(0,2)} {whatsapp.slice(2,3)} {whatsapp.slice(3,7)} {whatsapp.slice(7)}</span>
                        </div>
                    </a>

                    <a href={`https://instagram.com/${instagram}`} target="_blank" class="group flex items-center gap-4">
                        <div class="w-11 h-11 rounded-full bg-stone-100 flex items-center justify-center text-primary transition-all group-hover:bg-primary group-hover:text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
                            </svg>
                        </div>
                        <div>
                            <span class="block text-xs uppercase text-gray-400 tracking-wide">Instagram</span>
                            <span class="text-sm font-semibold text-gray-900 group-hover:text-primary transition-colors">@{instagram}</span>
                        </div>
                    </a>
                </div>

                <a 
                    href="#contacto" 
                    class="group inline-flex items-center gap-5 bg-gray-900 text-white pl-8 pr-3 py-3 rounded-full font-semibold hover:bg-primary transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
                >
                    Contactar
                    <span class="w-11 h-11 bg-white rounded-full flex items-center justify-center text-gray-900 transition-all group-hover:rotate-[-45deg] group-hover:bg-gray-900 group-hover:text-white">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14M12 5l7 7-7 7"/>
                        </svg>
                    </span>
                </a>

                <div class="absolute bottom-0 right-0 opacity-30 pointer-events-none animate-float-slow">
                    <img src="https://bracketweb.com/zoomvilla-html/assets/images/shapes/about-shape-1-1.png" alt="" class="max-w-[200px]" />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    @keyframes float-slow {
        0%, 100% { transform: translate(0, 0) rotate(0deg); }
        50% { transform: translate(-20px, -15px) rotate(5deg); }
    }
    .animate-float { animation: float 4s ease-in-out infinite; }
    .animate-float-slow { animation: float-slow 8s ease-in-out infinite; }
</style>
